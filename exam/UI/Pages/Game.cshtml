@page
@model UI.Pages.Game
@{
    var monster = Model.Monster;
    var character = Model.Character;
}

<div class="d-flex justify-content-center">
    <div class="d-flex flex-md-row flex-column">
        <div class="mr-0 mr-md-5 mb-3 mb-md-0">
            <h5>Ваш персонаж</h5>
            <div>
                <label asp-for="Character.Name"></label>: @character.Name
            </div>
            <div>
                <label asp-for="Character.Damage"></label>: @character.Damage
            </div>
            <div>
                <label asp-for="Character.Weapon"></label>: @character.Weapon
            </div>
            <div>
                <label asp-for="Character.ArmorClass"></label>: @character.ArmorClass
            </div>
            <div>
                <label asp-for="Character.AttackModifier"></label>: @character.AttackModifier
            </div>
            <div>
                <label asp-for="Character.DamageModifier"></label>: @character.DamageModifier
            </div>
            <div>
                <label asp-for="Character.HitPoints"></label>: @character.HitPoints
            </div>
            <div>
                <label asp-for="Character.AttackPerRound"></label>: @character.AttackPerRound
            </div>
        </div>

        <div>
            <h5>Ваш противник</h5>

            <div>
                <label asp-for="Monster.Name"></label>: @monster.Name
            </div>
            <div>
                <label asp-for="Monster.Damage"></label>: @monster.Damage
            </div>
            <div>
                <label asp-for="Monster.Weapon"></label>: @monster.Weapon
            </div>
            <div>
                <label asp-for="Monster.ArmorClass"></label>: @monster.ArmorClass
            </div>
            <div>
                <label asp-for="Monster.AttackModifier"></label>: @monster.AttackModifier
            </div>
            <div>
                <label asp-for="Monster.DamageModifier"></label>: @monster.DamageModifier
            </div>
            <div>
                <label asp-for="Monster.HitPoints"></label>: @monster.HitPoints
            </div>
            <div>
                <label asp-for="Monster.AttackPerRound"></label>: @monster.AttackPerRound
            </div>
        </div>
    </div>
</div>